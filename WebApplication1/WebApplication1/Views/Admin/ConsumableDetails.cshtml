@model IEnumerable<Consumable>
@{
    ViewBag.Title = "ConsumableDetails";
}


<style>
    body {
        background-image: url('/Scripts/Images/Admin.png');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<h2 style="color:black;padding-left:1rem;background-color:white">Consumable Details</h2>


@using (Html.BeginForm("SearchMedicine", "Admin", FormMethod.Post))
{
    <div style="margin-bottom:1rem">
        <input type="search" name="name" />
        <input type="submit" value="Search" />
    </div>
}

@Html.ActionLink("Add New", "AddConsumables", "Admin", new { @class = "btm btn-danger btn-sm" })


@if (Model != null)
{
    <table class="table table-hover" style="margin-top:1rem">
        <thead class="WhiteHeader labelColorWhite">
            <tr>
                <th>Consumable Name</th>
                <th>Availabilty</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>


        <tbody class="TableBody">
            @foreach (var item in Model)
            {
                <tr class="labelColorWhite">
                    <td class="labelColorWhite">@Html.DisplayFor(a => item.consumable_name)</td>
                    <td class="labelColorWhite">@Html.DisplayFor(a => item.availability_detail)</td>
                    <td class="labelColorWhite">@Html.DisplayFor(a => item.price)</td>
                    <td>@Html.ActionLink("Edit", "EditConsumables", new { id = item.consumable_id })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{

    <p class="labelColorWhite">No details available</p>
}

@Html.ActionLink("Back", "Index", "Admin", new { @class = "ActionLinksBlue" })



